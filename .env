# .env
# This file stores environment-specific variables and secrets.
# DO NOT commit this file to version control in a public repository.

# Django Secret Key - IMPORTANT: Replace with a unique, random string in production.
SECRET_KEY='replace_with_a_strong_random_secret_key'

# Debug mode - Set to False in production.
DEBUG=True

# Allowed hosts - List domains/IPs that can serve the app.
# Example: ALLOWED_HOSTS=localhost,127.0.0.1,.herokuapp.com
ALLOWED_HOSTS=127.0.0.1,localhost

# Database Configuration (SQLite example)
# Use the following format: engine://user:password@host:port/database_name
# For SQLite, it's simply: sqlite:///path/to/database.sqlite3
DATABASE_URL=sqlite:///db.sqlite3

# Gemini AI Configuration
# Your API key for Google Gemini AI. Obtain this from Google AI Studio or Google Cloud.
GEMINI_API_KEY='your_google_gemini_api_key_here'

# Media files (User uploaded content)
MEDIA_URL=/media/
MEDIA_ROOT=media/

# Static files (CSS, JS, Images)
STATIC_URL=/static/
STATIC_ROOT=static/ # Directory where static files will be collected

# Optional: Email settings if needed for user registration, etc.
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend # Use console backend for testing
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
